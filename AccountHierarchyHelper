({
	callToServer : function(component, method, callback, params) {
        console.log('Calling helper callToServer function');
		var action = component.get(method);
        if(params){
            action.setParams(params);
        }
        console.log(JSON.stringify(params));
        action.setCallback(this, function(response) {
            var state = response.getState();
            if (state === "SUCCESS") {
                //alert('Processed successfully at server');
                callback.call(this,response.getReturnValue());
            }else if(state === "ERROR"){
                alert('There is no hierarchy to display.');
            }
        });
		$A.enqueueAction(action);
    },
    
    secondfun : function(component, event, helper) {
        var outfun = component.get("v.brandCount");
        console.log("*************==========",outfun);
        return outfun;
    }
})
